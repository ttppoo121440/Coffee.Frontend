{
  //自動格式化
  "stylelint.autoFixOnSave": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave":{
    "source.fixAll": true
  },
  // 提示錯誤訊息
  "eslint.alwaysShowStatus": true,
  // 偵測的檔案
  "eslint.options": {
    "extensions":[".html",".js",".vue"]
  },
  "eslint.validate": [
    "vue",
    "html",
    "javascript",
    "typescript"
  ],
  "[shellscript]": {
    "files.eol": "\n"
  },
}
